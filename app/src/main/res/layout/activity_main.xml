<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.view.MainActivity"
    >

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/mainDarkBrown"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mainimg"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent">

    </ImageView>

    <LinearLayout
        android:id="@+id/Ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/Ll2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="150dp">


        <Button
            android:id="@+id/btn_toInventory"
            android:text="재고관리"
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.5"
            android:drawableTop="@drawable/ic_coffee_bean"
            android:background="@drawable/main_button_design"
            />

        <Button
            android:id="@+id/btn_toMemo"
            android:text="메모장"
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.5"
            android:drawableTop="@drawable/ic_memo"
            android:background="@drawable/main_button_design"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Ll1"
        >

        <Button
            android:id="@+id/btn_toShop"
            android:text="쇼핑몰"
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:layout_weight="0.5"
            android:drawableTop="@drawable/ic_store_rating"
            android:background="@drawable/main_button_design"
            android:layout_margin="5dp" />

        <Button
            android:id="@+id/btn_toUserPage"
            android:text="사용자페이지"
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:layout_weight="0.5"
            android:layout_marginBottom="10dp"
            android:drawableTop="@drawable/ic_apron"
            android:background="@drawable/main_button_design"
            android:layout_margin="5dp" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>