<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.view.memo.ModifyMemoActivity"
    android:background="@color/subLightBrown">

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="80dp"
        android:background="@drawable/round_button_design"
        android:backgroundTint="@color/mainDarkBrown"
        android:textColor="#ffff"
        android:text="취소"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/round_button_design"
        android:backgroundTint="@color/mainDarkBrown"
        android:textColor="#ffff"
        android:text="저장"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/et_contents"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="150dp"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/edittext_design"
        android:inputType="textMultiLine"
        android:hint="내용 입력"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:gravity="top"
        android:lines="8"
        android:maxLines="100"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_title" />

    <EditText
        android:id="@+id/et_title"
        android:layout_width="252dp"
        android:layout_height="45dp"
        android:layout_marginBottom="19dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="제목"
        android:paddingLeft="10dp"
        android:inputType="textPersonName"
        android:background="@drawable/edittext_design"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/et_contents"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>